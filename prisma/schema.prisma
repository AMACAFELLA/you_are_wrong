generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model communities {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  v         Int      @map("__v")
  bio       String
  createdBy String   @db.ObjectId
  id_       String   @map("id")
  image     String
  members   String[]
  name      String
  opinions  String[]
  username  String   @unique(map: "username_1")
}

model opinions {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  updatedAt       DateTime @updatedAt
  v               Int       @map("__v")
  author          String    @db.ObjectId
  children        String[]
  community       String?   @db.ObjectId
  createdAt       DateTime? @db.Date
  parentId        String?
  text            String
  agreedIds       String[] @db.ObjectId
  gifUrl          String
  image           String
}

model users {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  v           Int      @map("__v")
  bio         String
  communities String[]
  id_         String   @map("id")
  image       String
  name        String
  onboarded   Boolean
  opinions    String[]
  username    String   @unique(map: "username_1")
}
